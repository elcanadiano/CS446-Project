<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="20dp"
    >
    
    <TextView
        android:id="@+id/search_manual_btitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btitle"
        android:layout_centerHorizontal="true"
   
    />
      <TextView
        android:id="@+id/search_manual_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/search_manual_btitle"
    />
       <TextView
        android:id="@+id/search_manual_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/search_manual_author"
    />
        <TextView
        android:id="@+id/search_manual_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="condition"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/search_manual_price"
    />
	<ImageView
	    android:id="@+id/image"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_toRightOf="@id/search_manual_btitle"
	    android:src="@drawable/bookpixel"
	/>
</RelativeLayout>
