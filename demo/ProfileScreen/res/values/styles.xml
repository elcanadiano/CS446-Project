<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name="titlebackgroundcolor">#3232CD</color>
    <color name="titletextcolor">#FFFF00</color>
    
    <style name="profilePageInfo" parent="profilePage">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    
    <style name="profilePageHeader" parent="profilePage">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    
    <style name="profilePage">
        <item name="android:textColor">@color/profile_text_color</item>
        <item name="android:textColorLink">@color/profile_link_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square</item>
    </style>
    
    <style name="customTheme" parent="android:Theme">
   		<item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>
    
    <style name="MyTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
	    <item name="android:windowTitleSize">80dp</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    

</resources>
