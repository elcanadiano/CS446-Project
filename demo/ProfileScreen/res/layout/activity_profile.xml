<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/background_color" >
    
    <RelativeLayout
        	android:id="@+id/profile"
        	android:layout_width="fill_parent"
        	android:layout_height="200dp"
        	android:orientation="vertical">
	    
	    <ImageView
			android:id="@+id/profile_pic"
		    android:contentDescription="This is the user's profile picture"
		    android:paddingLeft="5dp"
		    android:paddingTop="20dp"
		    android:paddingRight="0dp"
		    android:layout_height="150dp"
		    android:layout_width="125dp"
		    android:scaleType="fitXY" />

        <TextView
            style="@style/profilePageHeader"
            android:id="@+id/name"
            android:text="@string/txt_profile_name"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/profile_pic" />
        
		<TextView
		    style="@style/profilePageInfo"
	        android:id="@+id/phone"
	        android:layout_toRightOf="@id/profile_pic"
	        android:layout_below="@id/name"
	        android:text="@string/phone"
	        android:autoLink="phone"
	        android:drawableLeft="@drawable/phone" />
	    
	    <TextView
	        style="@style/profilePageInfo"
	        android:id="@+id/email"
	        android:layout_toRightOf="@id/profile_pic"
	        android:text="@string/email"
	        android:autoLink="email"
	        android:layout_below="@id/phone"
	        android:drawableLeft="@drawable/email" />
    </RelativeLayout>
    
    <TextView
        style="@style/profileBooksHeader"
        android:id="@+id/books_selling_text"
        android:layout_below="@id/profile"
        android:text="@string/txt_profile_name" />
    
    <ListView
          android:id="@+id/my_books"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/books_selling_text"
          android:layout_marginTop="20dp"
          android:background="@color/list_bg_color"
          android:cacheColorHint="@android:color/transparent"
          android:divider="@color/list_divider"
          android:dividerHeight="10dp"
          android:paddingLeft="2dp" />
</RelativeLayout>
