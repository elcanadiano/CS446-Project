<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barcodescanningapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
         >
        <activity
            android:name="com.example.barcodescanningapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.barcodescanningapp.PostActivity"
            android:label="@string/title_activity_post"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.barcodescanningapp.SearchActivity"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.barcodescanningapp.SearchManualActivity"
            android:label="@string/title_activity_search_manual"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.barcodescanningapp.SearchScan"
            android:label="@string/title_activity_search_scan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.barcodescanningapp.ManualSearchActivity"
            android:label="@string/title_activity_manual_search"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.barcodescanningapp.PostScanConfirmationActivity"
            android:label="@string/title_activity_post_scan_confirmation"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>